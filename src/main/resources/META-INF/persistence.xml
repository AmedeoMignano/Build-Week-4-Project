<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="bw4pu">
        <class>amedeo.mignano.entities.Tratta</class>
        <class>amedeo.mignano.entities.MezzoTrasporto</class>
        <class>amedeo.mignano.entities.StatoMezzoTrasporto</class>
        <class>amedeo.mignano.entities.Venditore</class>
        <class>amedeo.mignano.entities.Rivenditore</class>
        <class>amedeo.mignano.entities.Distributore</class>
        <class>amedeo.mignano.entities.User</class>
        <class>amedeo.mignano.entities.Card</class>
